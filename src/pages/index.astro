---
import pfp from "../../public/images/pfp.jpg";
import HeaderCard from "../components/headercard.astro"
import Star from "../components/star.astro";
import Card from "../components/card.astro";
import CardWrapper from "../components/cardwrapper.astro";

---

<html>
<meta charset="UTF-8">
    <head>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Cascadia+Mono:ital,wght@0,200..700;1,200..700&display=swap" rel="stylesheet">
    </head>
    <body>
        <HeaderCard img_main={pfp.src}>
            <div class="text-wrapper">
                <h1 id="headertext">Hey thereðŸ‘‹, I'm Delana</h1>
                <p>I'm a 14 year old... well... nerd... with a 
                    passion for physics, coding, maths, chemistry, 
